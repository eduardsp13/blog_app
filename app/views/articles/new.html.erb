<h1>Create an article</h1>

<% if @article.errors.any? %>
<h2>The following erros pevented the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Enter a title...", autofocus: true, required: true, class: "form-control" %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Enter a description...", class: "form-control" %>
  </p>

  <p>
      <%= f.submit "Create Article", class: "btn btn-primary" %>
  </p>


<% end %>